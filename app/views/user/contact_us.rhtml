<%require 'cgi'-%>
<div id="title">
<h3><%=_('Donate to help share the wisdom of Kabbalah')%></h3>
<h3><%=_('Your part in correcting the world')%></h3>
</div>
<%= render :partial => "payment" -%>
<div id="content">

<h3><%= @page_title %></h3>
<%= @page_content_short %>

<%
winurl = CGI::unescape(url_for(:controller => "send_email", :action => "email_get_data"))
onclick = "OpenWin('#{winurl}', '#@page_title', 600, 400); return false"
%>
<%= link_to _('Send Email Now'), 
		 {:controller => "send_email", :action => "email_get_data" },
		 {:target => "_blank", :class => "email", :onclick => onclick }
		 %>	
</div>
