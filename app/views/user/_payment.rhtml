<div id="payment">
<table cellspacing="0" class="pay-table">
	<tr>
		<th class="pay-th-left" />
		<% for payment in @payments -%>
			<th class="pay-th"><%=payment.name%></th>
		<% end -%>
	</tr>
	<tr>
		<td class="pay-td-left" />
		<% for payment in @payments -%>
			<td class="pay-td">
				<%=payment.short_description%>
				<% if payment.code == "electronic" %>
					<%= link_to _("Privacy and Security"), @privacy_and_security, :target => "_blank", :class => "el_payment", :id => "priv_and_sec"%>
					<%= link_to image_tag("visa.gif", :alt => _('Credit Card')),  @tranzilla, :target => "_blank", :class => "el_payment", :id => "tranzilla" %>
					<%= link_to image_tag("paypal.gif", :alt => _('PayPal')),  @paypal, :target => "_blank", :class => "el_payment", :id => "paypal" %>
					<% if @lang == "Russian" %>
						<%= link_to image_tag("webmoney.gif", :alt => _('WebMoney')),  @webmoney, :target => "_blank", :class => "el_payment", :onclick => "OpenWin('#{@webmoney}', '#{_('Webmoney Payment')}', 450, 310);return false" %>
					<% end %>
				<% end %>
				<% if payment.code == "bank_transaction" %>
					<%= link_to _("Details"), @bank_details, :target => "_blank", :class => "el_payment", :id => "bank_details" %>
				<% end %>
			</td>
		<% end -%>
	</tr>
</table>
</div>
