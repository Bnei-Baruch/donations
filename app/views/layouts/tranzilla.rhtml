<script type="text/javascript">
//<![CDATA[
function Enable_Disable(){      if(document.forms['form1'].elements['reg_credit'].checked==1){
                document.forms['form1'].elements['payments'].disabled=true;
        }else{
                document.forms['form1'].elements['payments'].disabled=false;
        }
}
function Make_Payments(){var p_number;
var sum;
var payment;
var warning;
        if(document.forms['form1'].elements['myid'].value!=''&&document.forms['form1'].elements['ccno'].value!=''&&document.forms['form1'].elements['mycvv'].value!=''&&document.forms['form1'].elements['sum'].value!=''&&document.forms['first_name']!=''&&document.forms['last_name']!=''&&document.forms['email']!='') {
                document.forms['form1'].submit();
        } else {
                warning='Please fill:\n';
                if(document.forms['form1'].elements['first_name'].value=='') {
                        warning+="First Name\n";
                }
                if(document.forms['form1'].elements['last_name'].value=='') {
                        warning+="Last Name\n";
                }
                if(document.forms['form1'].elements['email'].value=='') {
                        warning+="Email Address\n";
                }
                if(document.forms['form1'].elements['ccno'].value=='') {
                        warning+="Card Number\n";
                }

                if(document.forms['form1'].elements['mycvv'].value=='') {
                        warning+="CVV Number\n";
                }

                if(document.forms['form1'].elements['sum'].value=='') {
                        warning+="Amount\n";
                }
                if(document.forms['form1'].elements['myid'].value=='') {
                        warning+="ID";
                }
        }

        if(document.forms['form1'].elements['myid'].value=='') {
                alert(warning);
        } else {
                document.forms['form1'].submit();
        }

        if(document.forms['form1'].elements['reg_credit'].checked==0) {
                sum=document.forms['form1'].elements['summ'].value;
                p_number=document.forms['form1'].elements['payments'].value;
                p_number++;
                payment=sum/p_number;
                document.forms['form1'].elements['second_pay'].value=payment;
                document.forms['form1'].elements['first_pay'].value=payment;
        }
}
//]]>
</script>
