<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>Bnei Baruch Association::<%= controller.action_name %></title>
  <%= stylesheet_link_tag "tranzilla" , :media => "all" %>
<script type="text/javascript">
//<![CDATA[
var cot_loc0=(window.location.protocol == "https:")? "https://secure.comodo.net/trustlogo/javascript/cot.js" : "http://www.trustlogo.com/trustlogo/javascript/cot.js";
document.writeln('<script language="JavaScript" src="'+cot_loc0+'" type="text\/javascript"><\/script>');
</script>
<script type="text/javascript">
//<![CDATA[
function Enable_Disable(){
	document.forms['tranzilla'].elements['payments'].disabled=
		document.forms['tranzilla'].elements['reg_credit'].checked==1
}
function Make_Payments(){
var p_number;
var sum = parseFloat(document.forms['tranzilla'].elements['sum'].value);
var payment;
var warning;
var value = (document.forms['tranzilla'].elements['myid'].value!='')&&(document.forms['tranzilla'].elements['ccno'].value!='')&&(document.forms['tranzilla'].elements['mycvv'].value!='')&&(document.forms['tranzilla'].elements['sum'].value!='')&&(document.forms['xxxFirstName']!='')&&(document.forms['xxxLastName']!='')&&(document.forms['xxxEmail']!='')&&(sum>=0.01);

	if(value == true){
		document.forms['tranzilla'].submit();
	} else {
		warning='Please fill:\n';
		if(document.forms['tranzilla'].elements['xxxFirstName'].value=='') {
			warning+="First Name\n";
		}
		if(document.forms['tranzilla'].elements['xxxLastName'].value=='') {
			warning+="Last Name\n";
		}
		if(document.forms['tranzilla'].elements['xxxEmail'].value=='') {
			warning+="Email Address\n";
		}
		if(document.forms['tranzilla'].elements['ccno'].value=='') {
			warning+="Card Number\n";
		}
		if(document.forms['tranzilla'].elements['mycvv'].value=='') {
			warning+="CVV Number\n";
		}
		if((document.forms['tranzilla'].elements['sum'].value=='') || (sum < 0.01)) {
			warning+="Correct Amount\n";
		}
		if(document.forms['tranzilla'].elements['myid'].value=='') {
			warning+="ID";
		}
	}

	if(document.forms['tranzilla'].elements['reg_credit'].checked==0) {
		sum=document.forms['tranzilla'].elements['sum'].value;
		p_number=document.forms['tranzilla'].elements['payments'].value;
		payment=sum/p_number;
		document.forms['tranzilla'].elements['second_pay'].value=payment;
		document.forms['tranzilla'].elements['first_pay'].value=payment;
	}

	if(value == false) {
		alert(warning);
	} else {
		document.forms['tranzilla'].submit();
	}
	return false;
}
//]]>
</script>
</head>
